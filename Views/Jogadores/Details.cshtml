@model LBAChamps.Models.Jogador
@using System

@{
    ViewData["Title"] = "Detalhes do Jogador";
    int Idade(DateOnly nasc)
    {
        var hoje = DateOnly.FromDateTime(DateTime.Today);
        var idade = hoje.Year - nasc.Year;
        if (hoje < nasc.AddYears(idade)) idade--;
        return idade;
    }
}

<h2>@ViewData["Title"]</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.Nome</dd>

    <dt class="col-sm-3">Posição</dt>
    <dd class="col-sm-9">@Model.Posicao</dd>

    <dt class="col-sm-3">Número de Camisa</dt>
    <dd class="col-sm-9">@Model.NumeroCamisa</dd>

    <dt class="col-sm-3">Idade</dt>
    <dd class="col-sm-9">@Idade(Model.DataNascimento) anos</dd>

    <dt class="col-sm-3">Time</dt>
    <dd class="col-sm-9">@Model.Time.Nome</dd>

    <dt class="col-sm-3">Liga</dt>
    <dd class="col-sm-9">@Model.Time.Liga.Nome</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.IdJogador" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
