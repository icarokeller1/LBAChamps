@model LBAChamps.Models.EstatisticasPartida
@{
    ViewData["Title"] = "Detalhes";
}

<h3>Estatística da Partida</h3>
<hr />

<dl class="row">
    <dt class="col-sm-3">Partida</dt>
    <dd class="col-sm-9">
        @Model.Partida.TimeCasa.Nome x @Model.Partida.TimeFora.Nome<br />
        <span class="text-muted">@Model.Partida.DataHora.ToString("dd/MM/yyyy HH:mm")</span>
    </dd>

    <dt class="col-sm-3">Jogador</dt>
    <dd class="col-sm-9">@Model.Jogador.Nome</dd>

    <dt class="col-sm-3">Pontos</dt>
    <dd class="col-sm-9">@Model.Pontos</dd>

    <dt class="col-sm-3">Rebotes</dt>
    <dd class="col-sm-9">@Model.Rebotes</dd>

    <dt class="col-sm-3">Assistências</dt>
    <dd class="col-sm-9">@Model.Assistencias</dd>

    <dt class="col-sm-3">Roubos</dt>
    <dd class="col-sm-9">@Model.RoubosBola</dd>

    <dt class="col-sm-3">Tocos</dt>
    <dd class="col-sm-9">@Model.Tocos</dd>

    <dt class="col-sm-3">Faltas</dt>
    <dd class="col-sm-9">@Model.Faltas</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.IdEstatistica" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
