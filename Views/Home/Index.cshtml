    <div class="col-md-2">
        <a asp-controller="EstatisticasPartidas" asp-action="Index" class="dashboard-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-123 fs-2"></i>
                    <small class="d-block">Pontos</small>
                    <span class="fw-bold">@Model.TotalPontos</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-2">
        <a asp-controller="EstatisticasPartidas" asp-action="Index" class="dashboard-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-basket fs-2"></i>
                    <small class="d-block">Rebotes</small>
                    <span class="fw-bold">@Model.TotalRebotes</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-2">
        <a asp-controller="EstatisticasPartidas" asp-action="Index" class="dashboard-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-hand-index-thumb fs-2"></i>
                    <small class="d-block">Assistências</small>
                    <span class="fw-bold">@Model.TotalAssistencias</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-2">
        <a asp-controller="EstatisticasPartidas" asp-action="Index" class="dashboard-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-shield-check fs-2"></i>
                    <small class="d-block">Roubos</small>
                    <span class="fw-bold">@Model.TotalRoubosBola</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-2">
        <a asp-controller="EstatisticasPartidas" asp-action="Index" class="dashboard-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-arrow-up fs-2"></i>
                    <small class="d-block">Tocos</small>
                    <span class="fw-bold">@Model.TotalTocos</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-2">
        <a asp-controller="EstatisticasPartidas" asp-action="Index" class="dashboard-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-exclamation-circle fs-2"></i>
                    <small class="d-block">Faltas</small>
                    <span class="fw-bold">@Model.TotalFaltas</span>
                </div>
            </div>
        </a>
    </div>
</div>
