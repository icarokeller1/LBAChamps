@model LBAChamps.Models.ErrorViewModel
@{
    ViewData["Title"] = $"Erro {Model.StatusCode}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="d-flex align-items-center justify-content-center vh-100 bg-light error-page">
    <div class="container text-center">
        <i class="bi bi-exclamation-triangle display-1 text-warning mb-4"></i>

        <h1 class="display-3 fw-bold mb-2">Erro @Model.StatusCode</h1>

        <p class="lead mb-4">
            @(Model.StatusCode == 404
                        ? "A página solicitada não foi encontrada."
                        : "Desculpe, algo inesperado aconteceu.")
        </p>

        <div class="d-flex gap-3 justify-content-center flex-wrap mb-5">
            <a class="btn btn-primary px-4" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-1"></i> Voltar ao início
            </a>
            <button class="btn btn-outline-secondary px-4" onclick="history.back()">
                <i class="bi bi-arrow-left me-1"></i> Página anterior
            </button>
        </div>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted small">
                ID da requisição: <code>@Model.RequestId</code>
            </p>
        }
    </div>
</section>

<style>
    .error-page {
        background: radial-gradient(circle at top left, #ffffff 0%, #f8f9fa 100%);
    }
</style>
